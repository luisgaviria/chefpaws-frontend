---
import type { FeatureItem } from '../types/drupal';

interface Props {
  field_features_title?: string;
  features?: FeatureItem[];
}

const { 
  field_features_title = "Why ChefPaws?", 
  features = [] 
} = Astro.props;
---

<section class="slick-grid-section">
  <div class="container">
    <div class="grid-header">
      <span class="eyebrow">The Standard</span>
      <h2 class="title">{field_features_title}</h2>
    </div>

    <div class="bento-grid">
      {features.map((item, index) => (
        <div class="bento-item">
          <div class="item-header">
            <span class="item-index">0{index + 1}</span>
            <h3 class="item-title">{item.field_headline}</h3>
          </div>
          <p class="item-text">{item.field_description}</p>
          <div class="corner-accent"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .slick-grid-section {
    /* Using clamp for responsive padding: 4rem on mobile, 10rem on desktop */
    padding: clamp(4rem, 10vw, 10rem) 1.5rem;
    background: #ffffff;
    color: #0f172a;
    width: 100%;
    overflow: hidden;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* --- Dynamic Header with Architectural Ledge --- */
  .grid-header {
    margin-bottom: clamp(3rem, 8vw, 6rem);
    border-left: 6px solid #ff4d4d; /* Using your specific ChefPaws Red */
    padding-left: clamp(1.5rem, 4vw, 2.5rem);
  }

  .eyebrow {
    font-size: 0.75rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: #ff4d4d;
    display: block;
    margin-bottom: 0.75rem;
  }

  .title {
    /* Fluid typography that scales perfectly from mobile to your 16-inch Pro */
    font-size: clamp(2.2rem, 8vw, 5rem);
    font-weight: 950;
    text-transform: uppercase;
    letter-spacing: -0.05em;
    line-height: 0.9;
    margin: 0;
  }

  /* --- Bento Grid Structure --- */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .bento-item {
    background: #fafafa;
    padding: clamp(2rem, 5vw, 4rem);
    border: 1px solid #eef2f6;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 320px;
    transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .bento-item:hover {
    border-color: #ff4d4d;
    background: #fff;
    transform: translateY(-8px);
    box-shadow: 0 30px 60px -15px rgba(15, 23, 42, 0.1);
  }

  .item-header {
    margin-bottom: 1.5rem;
  }

  .item-index {
    font-family: ui-monospace, SFMono-Regular, Menlo, monospace;
    font-weight: 800;
    font-size: 0.85rem;
    color: #ff4d4d;
    display: block;
    margin-bottom: 1rem;
  }

  .item-title {
    font-size: clamp(1.4rem, 4vw, 1.85rem);
    font-weight: 950;
    text-transform: uppercase;
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .item-text {
    font-size: clamp(1rem, 2vw, 1.15rem);
    line-height: 1.6;
    color: #475569;
    max-width: 440px;
    font-weight: 500;
  }

  .corner-accent {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, transparent 50%, #f1f5f9 50%);
  }

  /* --- MOBILE SPECIFIC FIXES --- */
  @media (max-width: 1024px) {
    .bento-grid { 
      grid-template-columns: 1fr; 
      gap: 1rem; 
    }
    
    .bento-item { 
      min-height: auto; 
      /* Reduce padding on mobile to keep information density high */
      padding: 2.5rem 1.5rem; 
    }

    .item-header {
      margin-bottom: 1rem;
    }

    /* Architectural ledge is thinner on mobile for better screen use */
    .grid-header {
      border-left-width: 4px;
    }
  }
</style>