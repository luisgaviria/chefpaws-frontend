---
interface Props {
  field_title?: string;
  field_subtitle?: string;
  field_media?: string;
  field_badge?: string;
}

const { 
  field_title = "Nutrition as Unique as They Are", 
  field_subtitle = "Stop guessing. Get vet-grade meal portions calculated specifically for your dog.",
  field_media: rawMedia = "/dog-hero.png",
  field_badge = "New: Fresh Beef Recipe"
} = Astro.props;

// CLEANUP LOGIC:
// If the URL contains "http", it's already an absolute Cloudflare link.
// We only want to use the string as-is without adding the Heroku prefix.
const field_media = rawMedia.startsWith('http') 
  ? rawMedia 
  : rawMedia;
---




<section class="hero-wrap" id="parallax-container">
  <div class="visual">
    <img src={field_media} alt="" loading="eager" fetchpriority="high" />
    <div class="blob"></div>
  </div>

  <div class="content">
    <div class="parallax-layer" data-speed="0.05">
      {field_badge && (
        <div class="badge">
          <span class="dot"></span>
          {field_badge}
        </div>
      )}
    </div>
    
    <div class="parallax-layer" data-speed="0.1">
      <h1>{field_title}</h1>
    </div>

    <div class="parallax-layer" data-speed="0.07">
      <p>{field_subtitle}</p>
    </div>
    
    <div class="parallax-layer" data-speed="0.04">
      <div class="actions">
        <a href="/dashboard" class="btn-primary">Get Started</a>
        <a href="#how-it-works" class="btn-secondary">
          Our Process
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  // Optimized Scroll with RequestAnimationFrame for buttery smoothness
  const layers = document.querySelectorAll('.parallax-layer');
  let scrollY = 0;

  function updateParallax() {
    scrollY = window.pageYOffset;
    
    layers.forEach((layer) => {
      const speed = parseFloat(layer.getAttribute('data-speed') || "0");
      // Applying a very small offset
      const yPos = -(scrollY * speed);
      // Using 3D transform for hardware acceleration
      (layer as HTMLElement).style.transform = `translate3d(0, ${yPos}px, 0)`;
    });

    requestAnimationFrame(updateParallax);
  }

  // Only start if not on a low-power device or mobile
  if (window.innerWidth > 768) {
    requestAnimationFrame(updateParallax);
  }
</script>

<style>
  .hero-wrap {
    --brand-coral: #ff6b6b;
    position: relative;
    width: 100%;
    min-height: 85vh; 
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #000;
    overflow: hidden;
    margin-top: 2rem;
    isolation: isolate;
  }

  .visual {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .visual img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    filter: brightness(0.8) contrast(1.1);
  }

  .blob {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.7) 100%);
    z-index: 2;
  }

  .content {
    position: relative;
    z-index: 10;
    max-width: 1100px;
    padding: 0 2rem;
    text-align: center;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Parallax Layer Smoothing */
  .parallax-layer {
    will-change: transform;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* transition removed here to let RequestAnimationFrame handle the smoothness 
    
    Testing a new deployment*/
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 1.25rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    font-size: 0.8rem;
    font-weight: 800;
    text-transform: uppercase;
    margin-bottom: 2rem;
    color: var(--brand-coral);
  }

  .dot {
    width: 8px;
    height: 8px;
    background: var(--brand-coral);
    border-radius: 50%;
  }

  h1 {
    font-size: clamp(3rem, 9vw, 6.5rem);
    font-weight: 950;
    line-height: 0.85;
    text-transform: uppercase;
    letter-spacing: -0.05em;
    margin: 0 0 2rem 0;
    text-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
  }

  p {
    font-size: 1.25rem;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto 3.5rem auto;
    font-weight: 500;
    opacity: 0.95;
  }

  .actions {
    display: flex;
    justify-content: center;
    gap: 3rem;
  }

  .btn-primary {
    background: #fff;
    color: #000;
    padding: 1.2rem 2.8rem;
    border-radius: 2px;
    font-weight: 900;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .btn-primary:hover {
    background: var(--brand-coral);
    color: #fff;
    transform: translateY(-3px);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    color: #fff;
    text-transform: uppercase;
    font-weight: 800;
    text-decoration: none;
    position: relative;
    padding-bottom: 6px;
  }

  .btn-secondary::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--brand-coral);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .btn-secondary:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .btn-secondary svg {
    transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .btn-secondary:hover svg {
    transform: translateX(6px);
  }

  @media (max-width: 768px) {
    .hero-wrap { min-height: 70vh; }
    .actions { flex-direction: column; width: 100%; gap: 1.5rem; }
    .btn-primary { width: 100%; text-align: center; }
  }
</style>