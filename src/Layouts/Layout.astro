---
// src/layouts/Layout.astro
import { ClientRouter } from 'astro:transitions';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
      <ClientRouter /> 
		<meta charset="UTF-8" />
		<title>{title} | ChefPaws</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		</head>
	<body>
		<Nav />
		
		<main>
			<slot /> </main>

		<Footer />
	</body>
</html>

<style is:global>
  :root {
    --brand: #ff6b6b;
    --bg: #fafafa;
    --card-bg: #ffffff;
  }

  /* 1. Global Safety Reset */
  *, *::before, *::after {
    box-sizing: border-box; /* Padding won't push width past 100% */
  }
  
  html, body {
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden; /* Stops horizontal scrolling/zoom */
    margin: 0;
    padding: 0;
  }

  body {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    background-color: var(--bg);
    color: #333;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* 2. Responsive Main Container */
  main {
    flex: 1;
    width: 100%;
    /* Increase this to 1400px so your Bento Grid has room on desktop */
    max-width: 1400px; 
    margin: 0 auto;
    /* Ensure padding doesn't squeeze too tight on small phones */
    padding: 2rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center; /* Centers the calculator inside main */
  }

  /* 3. Helper to ensure internal components don't overflow */
  img, video, canvas, svg {
    max-width: 100%;
    height: auto;
  }
</style>